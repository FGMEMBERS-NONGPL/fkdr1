<?xml version="1.0"?>
 
<PropertyList>

 <fx>
 
  <crank>
   <name>cough</name>
   <path>Aircraft/fkdr1/Sounds/coughing.wav</path>
   <condition>
    <property>/engines/engine/rpm</property>
    <not>
     <property>/engines/engine/running</property>
    </not>
   </condition>
   <volume>
    <property>/engines/engine/rpm</property>
    <factor>0.3</factor>
   </volume>
   <pitch>
    <property>/engines/engine/rpm</property>
    <factor>0.5</factor>
    <offset>0.5</offset>
   </pitch>
  </crank>

  <engine>
   <name>engine</name>
   <mode>looped</mode>
   <path>Aircraft/fkdr1/Sounds/wasp.wav</path>
   <property>/engines/engine/rpm</property>
   <volume>
    <property>/engines/engine/mp-osi</property>
    <factor>0.005</factor>
    <min>0.15</min>
    <max>0.3</max>
    <offset>0.15</offset> 
   </volume>
  </engine>

  <wind>
   <name>wind</name>
   <mode>looped</mode>
   <path>Sounds/wind.wav</path>
   <property>/velocities/airspeed-kt</property>
   <volume>
    <property>/position/altitude-ft</property>
    <factor>-0.000015</factor>
    <offset>1.0</offset>
    <min>0.1</min>
    <max>1.0</max>
   </volume>
   <volume>
     <property>/velocities/airspeed-kt</property>
     <factor>0.003</factor>
     <min>0.03</min>
     <max>1.2</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.003</factor>
    <offset>1.25</offset>
   </pitch>
  </wind>

</fx>
 
</PropertyList>
